include head.pug
div(class='wrap')
    div(class='content')
        header(class='jumbotron')
            include header
        
        div(class='container')
            div(class='row justify-content-md-center')
                div(class="col col-md-12")
                    h2(class='panel-title text-center' ) #{goods[0].name}
                
                div(class='col')
                    img(
                        src=goods[0].image
                        class="goods_image"
                    )
                div(class='col col-md-12 text-center')
                    p(class="goods_info") #{goods[0].description}
                    div.buy_block
                        span.price Price: #{goods[0].cost.toFixed(2).replace(/\d(?=(\d{3})+\.)/g,'$& ')}
                        button(class='add-to-cart btn btn-success' data-goods_id=goods[0].id) to cart
            include nav
    include footer