include head.pug
div(class='wrap')
    div(class='content')
        header(class='jumbotron')
            include header
        
        div(class='container')
            div(class='row')
                div(class="col col-md-12")
                    h2(class='panel-title') #{goods[0].name}
                div(class='col col-md-4')
                    img(
                        src="images/"+ goods[0].image
                        class="goods-image"
                    )
                div(class='col col-md-8')
                    p #{goods[0].description}
                    span.price #{goods[0].cost.toFixed(2).replace(/\d(?=(\d{3})+\.)/g,'$& ')}
                    button(class='add-to-cart btn btn-success') to cart
            include nav
    include footer