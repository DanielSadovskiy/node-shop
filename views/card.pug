div(class='col col-md-3')
    div(class='card')
        a(href="goods?id="+val.id)
            h3(class="card-title" ) #{val.name}
        img(
            class='card-image-top img-responsive'
            src=val.image
        )
        a(href='#')
            i.fa.fa-times(class="delete_btn" aria-hidden='true' data-id=val.id) 
        a(href=`/update?id=${val.id}`)
            i.fa.fa-pen(class="update_btn" aria-hidden='true' data-id=val.id) 
        p(class='card-text') #{val['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g,'$& ')} uah
        button(class='add-to-cart btn btn-success ' data-goods_id=val.id) to card
